<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quiroga.shoppinglist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/shopping_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FavRecipeActivity"
            android:label="@string/favorite"
            android:parentActivityName=".RecipeMenuActivity"></activity>
        <activity
            android:name=".IngredientsActivity"
            android:label="@string/ingredients"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".RecipeMenuActivity"
            android:label="@string/recipes"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".AddRecipeActivity"
            android:parentActivityName=".RecipeMenuActivity"></activity>
        <activity
            android:name=".RecipeClickActivity"
            android:parentActivityName=".RecipeMenuActivity"></activity>
        <activity
            android:name=".listviewwithfavorite"
            android:parentActivityName=".RecipeMenuActivity">

        </activity>
        <activity
            android:name=".RecipeHistory"
            android:label="@string/recipeHistory"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".RecipeSearch"
            android:label="@string/RecipeSearch"
            android:parentActivityName=".MainActivity"></activity>

        <!-- <activity -->
        <!-- android:name=".SingleItemView"> -->
        <!-- </activity> -->
        <activity android:name=".IngSearch"></activity>
        <activity
            android:name=".Request"
            android:label="@string/title_activity_request"></activity>
    </application>

</manifest>